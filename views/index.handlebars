<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4 text-center jumboText">Burgers</h1>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Burgers to be devoured</h2>

            <ul>
                {{#each burgers}} {{#unless devoured}} {{> burger/burgerBlock devoured=false}} {{/unless}} {{/each}}
            </ul>
        </div>

        <div class="col-6">
            <h2>Burgers that have been devoured</h2>
            <ul>
                {{#each burgers}} {{#if devoured}} {{>burger/burgerBlock devoured=true}} {{/if}} {{/each}}
            </ul>
        </div>
    </div>

    <div class="row">
        <div class="col text-center">
            <h2>Add a Burger</h2>
            <form class="create-form">

                <div class="form-group">

                    <input type="text" id="ca" name="devoured">
                </div>

                <button type="submit" class="btn btn-danger">Add Burger</button>
            </form>
        </div>
    </div>
</div>